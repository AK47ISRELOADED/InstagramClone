        padding: 10px 20px;
        display: flex;
        flex-direction: column;
    }

    #main h1{
        text-align: center;
        font-size: 20px;
        text-transform: capitalize;
        margin-bottom: 10px;
    }
    form{
        padding: 20px;
        gap: 10px;
        display: flex;
        flex-direction: column;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    input{
        padding: 11px 20px;
        border-radius: 20px;
        /* margin-top: 0px; */
        outline: none;
        background-color: #dedede;
        border: none;
    }
    input:nth-child(1){
        padding: 11px 20px;
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
    }
    
    input::placeholder{
        /* color: blueviolet; */
        display: flex;
        align-items: center;
        justify-content: center;
    }
    button{
        border-radius: 20px;
